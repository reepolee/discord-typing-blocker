{
  "background": { "scripts": ["background/index.js"] },
  "content_scripts": [
    {
      "js": ["content/index.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "browser_action": {
    "default_icon": "discord-block.png"
  },
  "permissions": [
    "storage",
    "webRequestBlocking",
    "*://discord.com/api/v8/channels/*"
  ]  
}
